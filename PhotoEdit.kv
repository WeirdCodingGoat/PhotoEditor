<QuizManager>:
    Question2Screen:
        name: "question2"
    CorrectScreen:
        name: "correct"
    WrongScreen:
        name: "wrong"

<Question2Screen>:
    BoxLayout:
        orientation:"vertical"
        spacing: 5
        GridLayout:
            orientation:"lr-tb"
            cols:2
            TextInput:
                id: answer
                hint_text: "Gimme a photo file. (debug: 2012)"
            Button:
                text: "Enter"
                on_release: root.answer_question(answer.text)
            Button:
                text: "Blue to green"
            Button:
                text: "Pointillism"
            Button:
                text: "Sepia"
            Button:
                text: "Invert"
            Button:
                text: "Horizontal flip"
            Button:
                text: "Vertical flip"
            Button:
                text: "Spot pixalate"
            
                
                
        BoxLayout:
            size_hint: 1, 1
            orientation: "vertical"
            Image:
                id: image
                source: root.display_image()
                size_hint: 1, .5


<WrongScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5"
        Label:
            text: "WRONG"
        Button:
            text: "Skip -->"
            on_release: root.next()

<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5"
        Label:
            text: "CORRECT"
        Button:
            text: "Next -->"
            on_release: root.next()
